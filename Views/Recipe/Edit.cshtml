@model Recipator.Models.Recipe

<h1>Update Recipe</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.Id)
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <textarea asp-for="Ingredients" class="form-control" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control" rows="6"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
